{
  "manifest_version": 3,
  "name": "AI Timeline Assistant",
  "version": "1.1",
  "description": "在AI对话中显示问题时间线，支持Gemini和DeepSeek平台，方便快速跳转到之前的问题",
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon.svg",
      "48": "images/icon.svg",
      "128": "images/icon.svg"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://gemini.google.com/*", "*://chat.deepseek.com/*"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],
  "icons": {
    "16": "images/icon.svg",
    "48": "images/icon.svg",
    "128": "images/icon.svg"
  },
  "background": {
    "service_worker": "background.js"
  }
}